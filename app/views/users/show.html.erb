<div class="container">
  <div class="row">
    <h1 class="text-center"><%= @user.userName %> </h1>
    <div class="col-md-6">
        <%= image_tag @user.avatar.url, size: "320x426", class: "img-responsive" %>
        <h3 class="h3isNeon"><%=@user.first_name%> <%=@user.last_name%></h3>

        <% if is_user?(@user) %>
        <%= button_to "Edit", edit_user_path, method: :get, class: "btn btn-default" %>
        <%= button_to "Delete", @user, method: :delete, class: "btn btn-danger" %>
        <% end %>
        <br>
        <p><strong> Total Upvotes: </strong> <%= upvote_count(@user) %> </p> 
        <br>
        <p> <strong> Total Downvotes: </strong> <%= downvote_count(@user)  %> </p>
        <br>
    </div>
    <div class="col-md-6">
  <% @places.each do |place| %>

    <div class="votebox place" data-upvotes=<%= place.upvotes.where({user: @user}).count %> data-downvotes=<%= place.downvotes.where({user: @user}).count %> data-vote-percentage=<%= calculate_upvote_percentage( place.upvotes.where({user: @user}).count, place.downvotes.where({user: @user}).count ) %>  id=<%= place.id %> >

      <%= link_to(place) do %>
      <h3> <%= place.name %> </h3>
      <% end %>
      <p><strong>Up votes</strong> <%= place.upvotes.where({user: @user}).count %></p>

      <p><strong>Down votes</strong> <%= place.downvotes.where({user: @user}).count %></p>
      
      <svg class="graph" id=<%= "graph#{place.id}" %> ></svg>

    </div>
  <% end %>
</div>
  </div> 
</div>