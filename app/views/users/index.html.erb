<div class="container">
	<h1 class="text-center">Current Users</h1>
	
	<div class= "row">
		<% @users.each do |user| %>
		<div class="col-md-4">
			<%= link_to(user) do %>
			<h3 class="text-center user-index"><%= user.userName.downcase %></h3>
			<% end %>
			<%= image_tag(user.avatar, width: "320", class: "center-block") %>
				</div>
		<% end %>
	</div>
</div>