<!DOCTYPE html>
<html>
<head>
  <title>FleetingBeauty</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverted navbar-fixed-top">
		<ul class="nav nav-tabs">
		  <% if current_user %>
		    <li role="presentation" class="active"><%= link_to "Profile", user_path(current_user) %></li>
		    <li role="presentation"><%= link_to "Log Out", logout_path %></li>
		  <% else %>
		    <li role="presentation" class="active"><%= link_to "Create Account", new_user_path %></li>
		    <li role="presentation"><%= link_to "Log In", login_path %></li>
		  <% end %>
		</ul>
	</nav>
	<% flash.each do |name, msg| %>
	  <p>
	    <small> <%= name.capitalize %>: <%= msg %> </small>
	  </p>
	<% end %>


<%= yield %>

</body>
</html>
